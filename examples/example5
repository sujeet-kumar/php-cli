#!/usr/bin/env php
<?php
require_once '../src/Cli.php';
require_once '../src/CliException.php';

use SujeetKumar\PhpCli\Cli;

$cli = new Cli();

$commands = array(
    'hello' => array(
        array('a', 'opta', 'opta desc'),
        array('b', 'optb', 'optb desc')
    ),
    'world' => array()
);

$cli->promptShell($commands, function ($cli, $command, $options) {
    $cli->cWrite($command);
    print_r($options);
});
