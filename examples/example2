#!/usr/bin/env php
<?php
require_once '../src/Cli.php';
require_once '../src/CliException.php';

use SujeetKumar\PhpCli\Cli;

$settings = array(
	'help_note' => 'This script is meant for auth demonstration.'
);

$cli = new Cli($settings);

do{
	$username = $cli->promptInput('Enter Username');
	$password = $cli->promptInput('Enter Password', true);
	$cli->nl();
	if($username == 'admin' and $password == '123456'){
		$logged_in = true;
		$cli->cWrite('You are logged in.','green');
	}else{
		$logged_in = false;
		$cli->cWrite('Invalid Username or Password. ','red');
		$cli->nl();
	}
}while(! $logged_in);

$cli->nl();

$cli->cWrite('Welcome !');